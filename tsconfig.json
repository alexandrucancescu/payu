{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "node16",
    "target": "es2022",
    "moduleResolution": "node16",
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "declaration": true,
    "declarationMap": false,
    "strict": true,
    "strictPropertyInitialization": true,
    "removeComments": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": "./src"
  }
}